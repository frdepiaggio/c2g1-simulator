{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block stylesheets %}
    <style>
        table, th, td {
            border: 1px solid #9E9E9E;
        }
        .flex {
            display: flex;
            width: fit-content;
            margin: 0 auto;
        }
        .flex > div{
            margin: 0 20px;
            text-align: center;
        }
        table {
            margin: 0px auto;
        }
        .gantt {
            padding: 0px 30px 50px 30px;
            margin: 10px auto;
            border: solid 1px #9e9e9e;
            width: fit-content;
        }
        .proceso-sale {
            position: absolute;
            right: -1px;
            bottom: 0;
            padding: 20px 10px 3px 14px;
            border-right: solid 2px;
            border-top: solid 2px;
            border-top-right-radius: 40px;
            background: rgba(3, 169, 244, 0.1);
        }
        .flecha {
            position: absolute;
            left: 10px;
            top: -46px;
            font-weight: bold;
        }
        .gantt-ejex {
            position: absolute;
            left: -5px;
            top: 110%;
        }
        .gantt-line {
            margin-top: 50px;
            width: 50px;
            border-bottom: solid 2px;
            position: relative;
            height: 5px;
            border-left: solid 1px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="flex">
        <div>
            <h2>Procesos cargados</h2>
            <table style="text-align: center;">
                <tr>
                    <th>ID Proceso</th>
                    <th>TA</th>
                    <th>TI</th>
                    <th>Tamaño</th>
                </tr>
                {% for key,proceso in procesos %}
                    <tr>
                        <td>{{ key }}</td>
                        <td>{{ proceso.ta }}</td>
                        <td>{{ proceso.ti }}</td>
                        <td>{{ proceso.size }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div>
            <h2>Particiones cargadas</h2>
            <table style="text-align: center;">
                <tr>
                    <th>ID Partición</th>
                    <th>Tamaño</th>
                </tr>
                {% for key,particion in memoria.particiones %}
                    <tr>
                        <td>{{ key }}</td>
                        <td>{{ particion.size }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="gantt">
        <h2>Diagrama de Gantt</h2>
        <div style="display: inline-flex;">
            <div style="position: relative;">
                <div class="gantt-ejex">0</div>
            </div>
            {% for t, rafaga in rafagas %}
                <div class="gantt-line">
                    {% if rafaga['finalizo'] %}
                        <div class="proceso-sale">{{ rafaga['finalizo']['id'] }}</div>
                        <div class="flecha">◄</div>
                    {% endif %}
                </div>
                <div style="position: relative;">
                    <div class="gantt-ejex">{{ t + 1 }}</div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div>
        {% for t, rafaga in rafagas %}
            <ul>
                <li><strong>t= {{ t +1 }}</strong></li>
                {% if rafaga['ejecutandose'] %}
                    <li>se ejecuta= Proceso {{ rafaga['ejecutandose']['id'] }}</li>
                {% endif %}
                {% if rafaga['finalizo'] %}
                    <li>finalizo= Proceso {{ rafaga['finalizo']['id'] }}</li>
                {% endif %}
            </ul>
        {% endfor %}
    </div>

{% endblock %}
