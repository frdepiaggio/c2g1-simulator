{% extends 'base.html.twig' %}

{% block title %} - Salida{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="flex output-contenedor">
        <div class="tabla">
            <h2>Procesos cargados</h2>
            <div class="cuerpo-tabla">
                <table style="text-align: center;">
                    <tr class="header">
                        <th rowspan="2">ID</th>
                        <th rowspan="2">TA</th>
                        <th colspan="3">Ciclo</th>
                        <th rowspan="2">Tamaño</th>
                    </tr>
                    <tr class="header second">
                        <th>Irrupción</th>
                        <th>Bloqueo</th>
                        <th>Irrupción</th>
                    </tr>
                    <tbody>
                    {% for key,proceso in procesos %}
                        <tr>
                            <td>{{ key }}</td>
                            <td>{{ proceso.ta }}</td>
                            <td>{{ proceso.ti1 }}</td>
                            <td>{{ proceso.bloqueo }}</td>
                            <td>{{ proceso.ti2 }}</td>
                            <td>{{ proceso.size }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tabla">
            <h2>Particiones cargadas</h2>
            <div class="cuerpo-tabla">
                <table style="text-align: center;">
                    <tr class="header">
                        <th>ID Partición</th>
                        <th>Tamaño</th>
                    </tr>
                    <tbody>
                        {% for key,particion in memoria.particiones %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ particion.size }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="gantt">
        <h2>Diagrama de Gantt</h2>
        <div class="gantt-body" altura="">
            <div style="display: inline-flex;">
                <div style="position: relative;">
                    <div class="gantt-ejex">0</div>
                </div>
                {% for t, rafaga in rafagas %}
                    <div class="gantt-line">
                        {% if rafaga['finalizo'] %}
                            <div class="proceso-name">{{ rafaga['finalizo']['id'] }}</div>
                            <div class="proceso-sale"></div>
                            <div class="flecha">►</div>
                        {% endif %}
                        {% if rafaga['bloqueo'] %}
                            <div class="proceso-name">{{ rafaga['bloqueo']['id'] }}</div>
                            <div class="proceso-bloquea"></div>
                            <div class="flecha-bloquea">◄</div>
                        {% endif %}
                    </div>
                    <div style="position: relative;">
                        <div class="gantt-ejex">
                            <a objetivo="propover-{{ t + 1 }}" data-toggle="popover"
                               data-container="body" data-html="true"
                               data-placement="bottom" flecha="popover-flecha-{{ t + 1 }}"
                            >
                                {{ t + 1 }}
                            </a>
                        </div>
                        <div id="popover-flecha-{{ t + 1 }}" class="popover-flecha"></div>
                        <div class="data-popover" id="propover-{{ t + 1 }}" style="display: none;">
                            <div class="popover-body">
                                <div>
                                    <span>En ejecucion: </span>
                                    {% if rafaga['ejecuto'] %}
                                        <span>{{ rafaga['ejecuto']['id'] }}</span>
                                    {% endif %}
                                </div>
                                <div>
                                    <span>Se bloqueó: </span>
                                    {% if rafaga['bloqueo'] %}
                                        <span>{{ rafaga['bloqueo']['id'] }}</span>
                                    {% endif %}
                                </div>
                                <div>
                                    <span>Finalizó: </span>
                                    {% if rafaga['finalizo'] %}
                                        <span>{{ rafaga['finalizo']['id'] }}</span>
                                    {% endif %}
                                </div>
                                <div>
                                    <span>Cola de nuevos</span>
                                    {% for procesoNuevo in rafaga['cola_nuevos'] %}
                                        <span>{{ procesoNuevo['id'] }}</span> -
                                    {% endfor %}
                                </div>
                                <div>
                                    <span>Cola de listos</span>
                                    {% for procesoNuevo in rafaga['cola_listos'] %}
                                        <span>{{ procesoNuevo['id'] }}</span> -
                                    {% endfor %}
                                </div>
                                <div>
                                    <span>Cola de bloqueados</span>
                                    {% for procesoNuevo in rafaga['cola_bloqueados'] %}
                                        <span>{{ procesoNuevo['id'] }}</span> -
                                    {% endfor %}
                                </div>
                                <div>
                                    <span>Memoria</span>
                                    <div>
                                        <ul>
                                            {% for particion in rafaga['particiones'] %}
                                                <li>
                                                    <div>
                                                        Paticion {{ particion['id'] }}:
                                                        {% if particion['proceso_asignado'] %}
                                                            {{ particion['proceso_asignado']['id'] }}
                                                        {% endif %}
                                                    </div>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    {% for procesoNuevo in rafaga['cola_bloqueados'] %}
                                        <span>{{ procesoNuevo['id'] }}</span> -
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

